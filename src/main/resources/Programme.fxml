<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ProgrammeController">
   <children>
      <TableView fx:id="programmeTableView" layoutX="14.0" layoutY="14.0" prefHeight="200.0" prefWidth="772.0" onMouseClicked="#handleProgrammeSelection">
         <columns>
            <TableColumn fx:id="columnTitle" prefWidth="200.0" text="Title" />
            <TableColumn fx:id="columnPlan" prefWidth="200.0" text="Plan" />
            <TableColumn fx:id="columnPlaces" prefWidth="150.0" text="Available Places" />
            <TableColumn fx:id="columnDate" prefWidth="147.0" text="Date" />
         </columns>
      </TableView>
      <VBox layoutX="14.0" layoutY="224.0" spacing="10.0">
         <children>
            <Label text="Title:" />
            <TextField fx:id="titreproField" />
            <Label text="Plan:" />
            <TextField fx:id="planproField" />
            <Label text="Available Places:" />
            <TextField fx:id="placedispoField" />
            <Label text="Date:" />
            <DatePicker fx:id="dateproPicker" />
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="addButton" text="Add" onAction="#addProgramme"/>
                  <Button fx:id="updateButton" text="Update" onAction="#updateProgramme"/>
                  <Button fx:id="deleteButton" text="Delete" onAction="#deleteProgramme"/>
                  <Button fx:id="clearButton" text="Clear" onAction="#clearForm"/>

               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
