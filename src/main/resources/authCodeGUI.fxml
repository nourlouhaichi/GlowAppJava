<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="150.0" prefWidth="502.0" style="-fx-border-color: #ffb524;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.authCodeController">
   <children>
        <Label alignment="CENTER" layoutX="13.0" layoutY="25.0" prefHeight="41.0" prefWidth="475.0" text="Please check your Email and write the verification code!" textFill="#81c408">
         <font>
            <Font name="Arial Rounded MT Bold" size="17.0" />
         </font>
      </Label>
      <TextField fx:id="codeTextField" layoutX="106.0" layoutY="76.0" prefHeight="30.0" prefWidth="185.0" promptText="Enter your code" style="-fx-border-color: #ffb524;">
         <font>
            <Font name="Arial Rounded MT Bold" size="14.0" />
         </font>
      </TextField>
      <Button fx:id="submitButton" layoutX="291.0" layoutY="76.0" mnemonicParsing="false" onAction="#submitButtonOnAction" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #ffb524;" text="Submit" textFill="WHITE">
         <font>
            <Font name="Arial Rounded MT Bold" size="14.0" />
         </font>
      </Button>
      <Label fx:id="errorLabel" alignment="CENTER" layoutX="13.0" layoutY="106.0" prefHeight="41.0" prefWidth="475.0" textFill="#ff3547">
         <font>
            <Font name="Arial Rounded MT Bold" size="14.0" />
         </font>
      </Label>
      <Button fx:id="exitButton" layoutX="477.0" layoutY="-1.0" mnemonicParsing="false" onAction="#exitButtonOnAction" style="-fx-background-color: #ff3547;" text="x" textFill="WHITE">
         <font>
            <Font name="Arial Rounded MT Bold" size="12.0" />
         </font>
      </Button>
      <Label fx:id="cinLabel" layoutX="10.0" layoutY="128.0" prefHeight="17.0" prefWidth="0.0" />
   </children>
</AnchorPane>
